{
  "name": "play-webpack-typescript-react",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.config.js",
    "bundle-size": "webpack --json | webpack-bundle-size-analyzer",
    "dashboard": "webpack-dashboard -p 3002",
    "eslint": "eslint **.js **/*.js *.json",
    "start": "webpack-dev-server --config webpack.config.js --progress --host 0.0.0.0 --port 2992 --inline --hot",
    "stylefmt": "stylefmt --recursive src/main/sass/**.scss",
    "stylelint": "stylelint src/main/sass/**.scss --syntax scss",
    "test": "jest",
    "typedoc": "typedoc --target ES6 --jsx preserve --out target/typedoc --mode file src/main/typescript"
  },
  "author": "Stephan Kleine",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "20.0.0",
    "@types/node": "7.0.31",
    "@types/react": "15.0.29",
    "@types/react-addons-test-utils": "0.14.18",
    "@types/react-dom": "15.5.0",
    "autoprefixer": "7.1.1",
    "awesome-typescript-loader": "3.1.3",
    "babel-core": "6.25.0",
    "babel-jest": "20.0.3",
    "babel-loader": "7.0.0",
    "babel-preset-env": "1.5.2",
    "babel-preset-react": "6.24.1",
    "browser-sync": "2.18.12",
    "browser-sync-webpack-plugin": "1.1.4",
    "css-loader": "0.28.4",
    "cssnano": "3.10.0",
    "eslint": "4.0.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.3.0",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-node": "5.0.0",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-standard": "3.0.1",
    "extract-text-webpack-plugin": "2.1.2",
    "jest": "20.0.4",
    "node-sass": "4.5.3",
    "postcss-loader": "2.0.6",
    "react-addons-test-utils": "15.6.0",
    "react-hot-loader": "3.0.0-beta.6",
    "sass-loader": "6.0.6",
    "style-loader": "0.18.2",
    "stylefmt": "6.0.0",
    "stylefmt-loader": "1.2.3",
    "stylelint": "7.11.1",
    "stylelint-config-standard": "16.0.0",
    "stylelint-webpack-plugin": "0.7.0",
    "tslint": "5.4.3",
    "tslint-loader": "3.5.3",
    "tslint-react": "3.0.0",
    "typedoc": "0.7.1",
    "typedoc-webpack-plugin": "1.1.4",
    "typescript": "2.3.4",
    "typescript-formatter": "5.2.0",
    "webpack": "2.6.1",
    "webpack-bundle-size-analyzer": "2.7.0",
    "webpack-dashboard": "0.4.0",
    "webpack-dev-server": "2.4.5",
    "webpack-notifier": "1.5.0"
  },
  "dependencies": {
    "bootstrap-sass": "3.3.7",
    "jquery": "3.2.1",
    "react": "15.6.1",
    "react-dom": "15.6.1"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/jestPreProcessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "/src/test/typescript/.*\\.(ts|tsx|js)$",
    "moduleDirectories": [
      "node_modules",
      "src/main/typescript",
      "src/test/typescript"
    ],
    "coverageDirectory": "target/jest-coverage"
  }
}
